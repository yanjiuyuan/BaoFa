
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout-noLogin.cshtml";
}

<el-form :model="ruleForm" :rules="rules" ref="ruleForm" label-width="100px" class="demo-ruleForm">
    <el-form-item label="账号" prop="username">
        <el-input v-model="ruleForm.username"></el-input>
    </el-form-item>
    <el-form-item label="密码" prop="password">
        <el-input type="password" v-model="ruleForm.password" auto-complete="off"></el-input>
    </el-form-item>
    <el-form-item label="确认密码" prop="checkPassword">
        <el-input type="password" v-model="ruleForm.checkPassword" auto-complete="off"></el-input>
    </el-form-item>

    <el-form-item label="公司名称" prop="company">
        <el-select v-model="ruleForm.company">
            <el-option v-for="e of companys" :label="e.CompanyName" :value="e.CompanyId" key="e.CompanyId"></el-option>
        </el-select>
    </el-form-item>

    <el-form-item label="验证码" prop="strCode">
        <el-input v-model="ruleForm.strCode" style="width:100px;"></el-input>
        <img id="code" v-on:click="refreshCode" src="/Code?id=" />
    </el-form-item>

    <el-form-item>
        <el-button type="primary" v-on:click="submitForm('ruleForm')">登录</el-button>
        <el-button v-on:click="resetForm('ruleForm')">重置</el-button>
    </el-form-item>
</el-form>

@section scripts{
    <script>
        new Vue({
            el: '#app',
            data: function () {
                return {
                    activeIndex: '0',
                    companys:[],
                    ruleForm: {
                        username: '',
                        password: '',
                        checkPassword: '',
                        company: '',
                        strCode: '',
                        remenber: true
                    },
                    rules: {
                        username: [
                            { required: true, message: '请输入账号', trigger: 'blur' },
                            { min: 2, max: 8, message: '长度在 2 到 8 个字符', trigger: 'blur' }
                        ],
                        password: [
                            { required: true, message: '请输入密码', trigger: 'blur' },
                            { min: 3, max: 8, message: '长度在 3 到 8 个字符', trigger: 'blur' }
                        ],
                        checkPassword: [
                            { required: true, message: '请输入密码', trigger: 'blur' },
                            { min: 3, max: 8, message: '长度在 3 到 8 个字符', trigger: 'blur' }
                        ],
                        company: [
                            { required: true, message: '请选择公司名称', trigger: 'blur' }
                        ],
                        strCode: [
                            { required: true, message: '请输入验证码', trigger: 'blur' },
                            { min: 4, max: 4, message: '请输入4位验证码', trigger: 'blur' }
                        ]
                    }
                }
            },
            methods: {
                submitForm(formName) {
                    this.$refs[formName].validate((valid) => {
                        if (valid) {

                            //setLocalObj('user', this.ruleForm)
                            //location.href = '/'
                        } else {
                            console.log('error submit!!');
                            return false;
                        }
                    });
                },
                resetForm(formName) {
                    this.$refs[formName].resetFields();
                },
                refreshCode() {
                    alert('refreshed')
                    var code = document.getElementById("code")
                    code.src = code.src + '1'
                }
            },
            created: function () {
                var that = this
                $.ajax({
                    url: '/Company/GetCompanyInfo',
                    success: function (data) {
                        data = JSON.parse(data)
                        if (data && data.length) {
                            that.companys = data
                        }
                    }
                })
            }
        })
    </script>
    <style>
        form {
            width: 460px;
            margin: 80px auto;
        }
    </style>
}

