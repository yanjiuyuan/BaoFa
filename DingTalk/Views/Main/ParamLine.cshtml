@{
    Layout = null;
}

<!--右侧实体内容-->
<div id="partPage">
    <!--查詢表單-->
    <el-form :inline="true" :model="formInline" class="demo-form-inline"
             size="medium">
        <el-form-item label="关键字">
            <el-input v-model="formInline.keyword" style="width:500px;"
                      placeholder="请输入搜索关键字"></el-input>
        </el-form-item>

        <el-form-item label="集团名称">
            <el-select v-model="formInline.groupnm" v-on:change="changeGroup">
                <el-option label="全部" value=""></el-option>
                <el-option v-for="e of groupnm" :label="e" :value="e" key="e"></el-option>
            </el-select>
        </el-form-item>
        <el-form-item label="公司名称">
            <el-select v-model="formInline.companynm" v-on:change="changeCompany">
                <el-option label="全部" value=""></el-option>
                <el-option v-for="e of companynm" :label="e" :value="e" key="e"></el-option>
            </el-select>
        </el-form-item>
        <el-form-item label="车间名称">
            <el-select v-model="formInline.foundrynm" v-on:change="changeFound">
                <el-option label="全部" value=""></el-option>
                <el-option v-for="e of foundrynm" :label="e" :value="e" key="e"></el-option>
            </el-select>
        </el-form-item>
        <el-form-item label="产线名称">
            <el-select v-model="formInline.linename">
                <el-option label="全部" value=""></el-option>
                <el-option v-for="c of linename" :label="c" :value="c" key="c"></el-option>
            </el-select>
        </el-form-item>


        <el-form-item>
            <el-button type="primary" v-on:click="onFilter">搜索</el-button>
        </el-form-item>

        <el-form-item>
            <el-radio-group v-model="formInline.status">
                <el-radio :label="998">全部</el-radio>
                <el-radio :label="1">启用</el-radio>
                <el-radio :label="0">禁用</el-radio>
            </el-radio-group>
        </el-form-item>
    </el-form>
    <!--表格實體-->
    <el-table :data="tableData" stripe border>
        <el-table-column prop="ProductLineId" label="产线编号" width="120"></el-table-column>
        <el-table-column prop="ProductLineName" label="产线名称" width="120"></el-table-column>
        <el-table-column prop="GroupName" label="所属集团名称" width="120"></el-table-column>
        <el-table-column prop="CompanyName" label="所属公司名称" width="120"></el-table-column>
        <el-table-column prop="telephone" label="固定电话" width="120"></el-table-column>
        <el-table-column prop="registertime" label="注册时间" width="120"></el-table-column>
        <el-table-column prop="role" label="角色" width="140"></el-table-column>
        <el-table-column prop="status" label="状态"></el-table-column>
    </el-table>
    <!--底部翻頁-->
    <div style="text-align:right">
        <el-pagination v-on:size-change="handleSizeChange"
                       v-on:current-change="handleCurrentChange"
                       :current-page="currentPage"
                       :page-sizes="[1, 3, 5, 10]"
                       :page-size="pageSize"
                       layout="total, sizes, prev, pager, next, jumper"
                       :total="totalRows">
        </el-pagination>
    </div>
</div>


<script>
    new Vue({
        el: "#partPage",
        mixins: [mixin],
        data: function () {
            return {
                tableData: [],
                currentPage: 1,
                pageSize: 5,
                totalRows: 0,
                superSearch: false,
                LineTreeList: [],
                groupnm: [],
                companynm: [],
                foundrynm: [],
                linename: [],
                formInline: {
                    keyword: '',
                    groupnm: '',
                    companynm: '',
                    foundrynm: '',
                    linename: '',
                    status: ''
                }
            }
        },
        methods: {
            //翻頁相關事件
            handleSizeChange: function (val) {
                this.currentPage = 1
                this.pageSize = val
                this.getOrderData({})
            },
            handleCurrentChange: function (val) {
                this.currentPage = val
                this.getOrderData({})
            },
            //查詢相關頁面
            onFilter: function () {
                this.currentPage = 1
                var searchParam = {}
                var formInline = this.formInline
                var date = new Date()
                for (var p in formInline) {
                    if (formInline[p] == '' || formInline[p] == null) continue
                    if (p == 'OrderTime' || p == 'DeliveryTime') {
                        searchParam['strStart' + p] = _dateToString(formInline[p][0], '-')
                        searchParam['strEnd' + p] = _dateToString(formInline[p][1], '-')
                    } else {
                        searchParam[p] = formInline[p]
                    }
                }
                this.getOrderData(searchParam)
                console.log(searchParam)
            },
            //切换高级搜索
            changeSuperSearch: function () {
                this.superSearch = !this.superSearch;
            },
            //获取订单数据
            getOrderData: function (obj) {
                var that = this
                obj.PageIndex = this.currentPage - 1
                obj.PageSize = this.pageSize
                $.ajax({
                    url: "/ProductionLines/ProductionLinesData" + _formatQueryStr(obj),
                    //dataType: 'json',
                    success: function (data) {
                        data = JSON.parse(data)
                        console.log('/获取订单数据')
                        console.log(data)
                        if (data && data.Rows) {
                            that.tableData = data.Rows
                            that.totalRows = parseInt(data.Counts)
                        }
                    },
                    error: function (err) {
                        console.error(err)
                    }
                })
            },
            //获取参数信息
            getLineTreeList: function () {
                var that = this
                $.ajax({
                    url: "/ProductionLines/GetLineTreeList",
                    success: function (data) {
                        data = JSON.parse(data)
                        console.log('//获取参数信息')
                        console.log(data)
                        for (let d of data) {
                            that.groupnm.push(d.groupnm)
                        }
                        that.LineTreeList = data
                    },
                    error: function (err) {
                        console.error(err)
                    }
                })
            },
            changeGroup: function () {
                this.companynm = []
                this.foundrynm = []
                this.linename = []
                for (let t of this.LineTreeList) {
                    if (t.groupnm != this.formInline.groupnm) continue
                    this.formInline.companynm = t.list[0].companynm
                    for (let c of t.list) {
                        this.companynm.push(c.companynm)
                        this.formInline.foundrynm = c.list[0].foundrynm
                        for (let f of c.list) {
                            this.foundrynm.push(f.foundrynm)
                            this.formInline.linename = f.list[0].linename
                            for (let l of f.list) {
                                if (l.linename != this.formInline.linename) continue
                                this.linename.push(l.linename)
                            }
                        }
                    }
                }
            },
            changeCompany: function () {
                this.foundrynm = []
                this.linename = []
                for (let t of this.LineTreeList) {
                    if (t.groupnm != this.formInline.groupnm) continue
                    for (let c of t.list) {
                        if (c.companynm != this.formInline.companynm) continue
                        this.formInline.foundrynm = c.list[0].foundrynm
                        for (let f of c.list) {
                            this.foundrynm.push(f.foundrynm)
                            this.formInline.linename = f.list[0].linename
                            for (let l of f.list) {
                                if (l.linename != this.formInline.linename) continue
                                this.linename.push(l.linename)
                            }
                        }
                    }
                }
            },
            changeFound: function () {
                this.linename = []
                for (let t of this.LineTreeList) {
                    if (t.groupnm != this.formInline.groupnm) continue
                    for (let c of t.list) {
                        if (c.companynm != this.formInline.companynm) continue
                        for (let f of c.list) {
                            if (f.foundrynm != this.formInline.foundrynm) continue
                            this.formInline.linename = f.list[0].linename
                            for (let l of f.list) {
                                if (l.linename != this.formInline.linename) continue
                                this.linename.push(l.linename)
                            }
                        }
                    }
                }
            }
        },
        created: function () {
            this.getLineTreeList()
            this.getOrderData({})
            loadHtml("mainPage", "partPage")
        }
    })
</script>