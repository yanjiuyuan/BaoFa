@{
    ViewBag.Title = "Home Page";
}

@RenderPage("~/Views/Shared/LeftMenu.cshtml")
                
<!--右侧实体内容-->
<el-main id="mainPage" style="background-color:white;">
</el-main>

@RenderPage("~/Views/Shared/LeftAnother.cshtml")
  

@section scripts{
    <script>
        
        var index = new Vue({
            el: '#app',
            mixins: [mixin],
            data: function () {
                return {
                    activeIndex: '1',
                    scollImages: [],
                    menuList: [],
                    accessList: []
                }
            },
            components: {

            },
            methods: {
                //获取菜单列表
                getMenuList: function () {
                    var that = this
                    $.ajax({
                        url: '/Main/MenuList?roleid=' + _getCookie('Role'),
                        success: function (data) {
                            console.log('获取菜单列表')
                            console.log(JSON.parse(data))
                            that.menuList = JSON.parse(data)
                        }
                    })
                },
                //获取交易码列表
                getAccessList: function () {
                    var that = this
                    $.ajax({
                        url: '/Main/AccessList?roleid=' + _getCookie('Role'),
                        success: function (data) {
                            console.log('获取交易码列表')
                            console.log(JSON.parse(data))
                            that.accessList = JSON.parse(data)
                        }
                    })
                },
                //修改密码
                showChangePw: function () {
                    var that = this
                    let oldPw = ''
                    this.$prompt('请输入原密码', '提示', {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        inputPattern: /^[0-9|a-z|A-Z]{3,8}$/,
                        inputErrorMessage: '请输入3-8位数字或字母'
                    }).then(({ value }) => {
                        oldPw = value
                        that.$prompt('请输入新密码', '提示', {
                            confirmButtonText: '确定',
                            cancelButtonText: '取消',
                            inputPattern: /^[0-9|a-z|A-Z]{3,8}$/,
                            inputErrorMessage: '请输入3-8位数字或字母'
                        }).then(({ value }) => {
                            var url = '/Register/PwdChange?username=' + _getCookie('UserName') + '&oldpwd=' + oldPw + '&newpwd=' + value
                            $.ajax({
                                url: url,
                                success: function (data) {
                                    console.log('修改密码')
                                    console.log(url)
                                    console.log(data)
                                    alert(JSON.parse(data).Msg)
                                },
                                error: function (err) {
                                    alert(err)
                                }
                            })
                        }).catch(() => {
                            that.$message({
                                type: 'info',
                                message: '取消输入'
                            });
                        });

                        
                    }).catch(() => {
                        this.$message({
                            type: 'info',
                            message: '取消输入'
                        });
                    });
                }
            },
            created: function () {
                
                this.getMenuList()
                this.getAccessList()
            }
        })
        //webSocket 连接
        var ws;
        ws = new WebSocket("ws://" + window.location.hostname + ":" + window.location.port + "/api/dt/Get");
        ws.onopen = function () {
            // $("#messageSpan").text("Connected!");
            console.log('open')
            if (ws.readyState == WebSocket.OPEN) {
                ws.send("GetAllTable");
                window.setInterval(function () {
                    ws.send("GetAllTable");
                }, 500)

            } else {

            }
        };

        $("#tempPage").load('/Main/DeviceMonitor')
        $('.footer').show()

        //首页JS
       
    </script>
}