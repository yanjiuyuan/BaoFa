@section scripts{
    <script>
        
        var index = new Vue({
            el: '#app',
            mixins: [mixin],
            data: function () {
                return {
                    activeIndex: '1',
                    scollImages: []
                }
            },
            components: {

            }
        })
        //webSocket 连接
        var ws;
        ws = new WebSocket("ws://" + window.location.hostname + ":" + window.location.port + "/api/dt/Get");
        ws.onopen = function () {
            // $("#messageSpan").text("Connected!");
            console.log('open')
            if (ws.readyState == WebSocket.OPEN) {
                ws.send("GetAllTable");
                window.setInterval(function () {
                    ws.send("GetAllTable");
                }, 500)

            } else {

            }
        };

        $("#tempPage").load('/Main/DeviceMonitor')

        
        //首页JS
        var scollImages = []
        for (var i = 1; i < 7; i++) {
            scollImages.push("../Content/images/scoll" + i + ".jpg")
        }
        index.scollImages = scollImages
    </script>
}