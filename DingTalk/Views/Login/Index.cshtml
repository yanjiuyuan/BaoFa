
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout-noLogin.cshtml";
}

<el-form :model="ruleForm" :rules="rules" ref="ruleForm" label-width="100px" class="demo-ruleForm">
    <el-form-item label="账号" prop="strUserName">
        <el-input v-model="ruleForm.strUserName"></el-input>
    </el-form-item>
    <el-form-item label="密码" prop="strPassword">
        <el-input type="strPassword" v-model="ruleForm.strPassword"></el-input>
    </el-form-item>

    @*<el-form-item label="保持登录" prop="remenber">
            <el-switch v-model="ruleForm.remenber"></el-switch>
        </el-form-item>*@

    <el-form-item>
        <el-button type="primary" v-on:click="submitForm('ruleForm')">登录</el-button>
        <el-button v-on:click="resetForm('ruleForm')">重置</el-button>
    </el-form-item>
</el-form>

@section scripts{
    <script>

        new Vue({
            el: '#app',
            data: function () {
                return {
                    activeIndex: '0',
                    ruleForm: {
                        strUserName: '',
                        strPassword: ''
                    },
                    rules: {
                        strUserName: [
                            { required: true, message: '请输入账号', trigger: 'blur' },
                            { min: 2, max: 8, message: '长度在 2 到 8 个字符', trigger: 'blur' }
                        ],
                        strPassword: [
                            { required: true, message: '请输入密码', trigger: 'blur' },
                            { min: 3, max: 8, message: '长度在 3 到 8 个字符', trigger: 'blur' }
                        ]
                    }
                }
            },
            methods: {
